<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--shadow to bottom and right-->
    <!--by pushing offset from top and left-->
    <item
        android:left="8dp"
        android:right="0dp"
        android:top="8dp"
        android:bottom="0dp">
        <!--<shape-->
        <!--android:shape="rectangle">-->
        <!--<solid android:color="@android:color/darker_gray" />-->
        <!--</shape>-->
        <shape
            android:shape="rectangle" >
            <!-- view background color -->
            <solid android:color="@android:color/darker_gray"  >
            </solid>
            <!-- view border color and width -->
            <stroke
                android:width="0dp"
                android:color="@android:color/darker_gray"  >
            </stroke>
            <!-- Here is the corner radius -->
            <corners
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                />
        </shape>

    </item>
    <!--foreground-color to cover over non-shadow-->
    <!--need to also offset in opposite direction-->
    <item
        android:left="0dp"
        android:right="4dp"
        android:top="0dp"
        android:bottom="4dp">
        <shape
            android:shape="rectangle" >
            <!-- view background color -->
            <solid android:color="@color/feed_item_bg" >
            </solid>
            <!-- view border color and width -->
            <stroke
                android:width="@dimen/feed_item_border_width"
                android:color="@color/feed_item_border" >
            </stroke>
            <!-- Here is the corner radius -->
            <corners
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                />
        </shape>
    </item>
</layer-list>